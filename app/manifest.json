{
  "name": "Bookmarks Counter",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Shows number of bookmarks.",
  "commands": {
    "open": {
      "suggested_key": {
        "default": "Alt+Shift+Y"
      },
      "description": "Open page"
    },
    "update": {
      "suggested_key": {
        "default": "Alt+Shift+U"
      },
      "description": "Update counter"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png",
    "256": "icon-256.png",
    "512": "icon-512.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
